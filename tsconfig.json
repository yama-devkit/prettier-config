{
    "compilerOptions": {
        // Enable latest features
        "lib": ["ES2022", "DOM"],
        "target": "ESNext",
        "module": "ES2022",
        // Bundler mode
        "moduleResolution": "node",
        "resolveJsonModule": true,
        // Best practices
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        // Some stricter flags (disabled by default)
        "esModuleInterop": true,
        "sourceMap": true
    }
}
